<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.johan.calculator.MainActivity"
    tools:layout_editor_absoluteY="89dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/equalButton"
        android:layout_width="0dp"
        android:layout_height="165dp"
        android:background="@android:color/darker_gray"
        android:text="="
        tools:layout_editor_absoluteY="658dp"
        tools:layout_editor_absoluteX="300dp" />

    <Button
        android:id="@+id/plusButton"
        android:layout_width="0dp"
        android:layout_height="132dp"
        android:background="@color/colorPrimary"
        android:text="+"
        tools:layout_editor_absoluteY="690dp"
        tools:layout_editor_absoluteX="450dp" />

    <Button
        android:id="@+id/deciButton"
        android:layout_width="0dp"
        android:layout_height="165dp"
        android:background="@android:color/darker_gray"
        android:text=","
        tools:layout_editor_absoluteY="658dp"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/Button1"
        android:layout_width="411dp"
        android:layout_height="87dp"
        android:background="@android:color/darker_gray"
        android:text="1"
        app:layout_constraintTop_toBottomOf="@+id/Button4"
        app:layout_constraintRight_toLeftOf="@+id/Button7" />

    <Button
        android:id="@+id/Button2"
        android:layout_width="206dp"
        android:layout_height="86dp"
        android:background="@android:color/darker_gray"
        android:text="2"
        app:layout_constraintTop_toBottomOf="@+id/Button9"
        app:layout_constraintRight_toLeftOf="@+id/Button9"
        app:layout_constraintBottom_toTopOf="@+id/Button7" />

    <Button
        android:id="@+id/Button3"
        android:layout_width="88dp"
        android:layout_height="86dp"
        android:background="@android:color/darker_gray"
        android:text="3"
        app:layout_constraintTop_toBottomOf="@+id/NumberField"
        app:layout_constraintRight_toLeftOf="@+id/Button6"
        app:layout_constraintBottom_toTopOf="@+id/dividedButton" />

    <Button
        android:id="@+id/minusButton"
        android:layout_width="88dp"
        android:layout_height="86dp"
        android:background="@color/colorPrimary"
        android:text="-"
        tools:layout_editor_absoluteX="373dp"
        app:layout_constraintTop_toBottomOf="@+id/Button5"
        app:layout_constraintBottom_toTopOf="@+id/delButton" />

    <Button
        android:id="@+id/Button4"
        android:layout_width="205dp"
        android:layout_height="87dp"
        android:background="@android:color/darker_gray"
        android:text="4"
        app:layout_constraintTop_toBottomOf="@+id/Button7"
        app:layout_constraintRight_toLeftOf="@+id/NumberField"
        app:layout_constraintBottom_toTopOf="@+id/Button1"
        android:layout_marginBottom="1dp" />

    <Button
        android:id="@+id/Button0"
        android:layout_width="0dp"
        android:layout_height="165dp"
        android:background="@android:color/darker_gray"
        android:text="0"
        tools:layout_editor_absoluteY="658dp"
        tools:layout_editor_absoluteX="150dp" />

    <Button
        android:id="@+id/Button5"
        android:layout_width="88dp"
        android:layout_height="86dp"
        android:background="@android:color/darker_gray"
        android:text="5"
        app:layout_constraintTop_toBottomOf="@+id/dividedButton"
        app:layout_constraintRight_toLeftOf="@+id/Button3"
        app:layout_constraintBottom_toTopOf="@+id/minusButton" />

    <Button
        android:id="@+id/Button6"
        android:layout_width="88dp"
        android:layout_height="86dp"
        android:background="@android:color/darker_gray"
        android:text="6"
        app:layout_constraintTop_toBottomOf="@+id/delButton"
        app:layout_constraintRight_toLeftOf="@+id/Button2"
        app:layout_constraintBottom_toTopOf="@+id/Button8" />

    <Button
        android:id="@+id/multiButton"
        android:layout_width="88dp"
        android:layout_height="86dp"
        android:background="@color/colorPrimary"
        android:text="*"
        app:layout_constraintRight_toLeftOf="@+id/dividedButton"
        app:layout_constraintBottom_toTopOf="@+id/NumberField" />

    <EditText
        android:id="@+id/NumberField"
        android:layout_width="37dp"
        android:layout_height="86dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@+id/multiButton"
        app:layout_constraintRight_toLeftOf="@+id/Button1"
        app:layout_constraintBottom_toTopOf="@+id/Button3" />

    <Button
        android:id="@+id/Button7"
        android:layout_width="88dp"
        android:layout_height="86dp"
        android:background="@android:color/darker_gray"
        android:text="7"
        app:layout_constraintTop_toBottomOf="@+id/Button2"
        app:layout_constraintRight_toLeftOf="@+id/Button8"
        app:layout_constraintBottom_toTopOf="@+id/Button4" />

    <Button
        android:id="@+id/Button8"
        android:layout_width="88dp"
        android:layout_height="86dp"
        android:background="@android:color/darker_gray"
        android:text="8"
        app:layout_constraintTop_toBottomOf="@+id/Button6"
        app:layout_constraintRight_toLeftOf="@+id/Button5"
        app:layout_constraintBottom_toTopOf="@+id/Button9" />

    <Button
        android:id="@+id/Button9"
        android:layout_width="88dp"
        android:layout_height="86dp"
        android:background="@android:color/darker_gray"
        android:text="9"
        app:layout_constraintTop_toBottomOf="@+id/Button8"
        app:layout_constraintRight_toLeftOf="@+id/delButton"
        app:layout_constraintBottom_toTopOf="@+id/Button2" />

    <Button
        android:id="@+id/dividedButton"
        android:layout_width="88dp"
        android:layout_height="86dp"
        android:background="@color/colorPrimary"
        android:text="/"
        app:layout_constraintTop_toBottomOf="@+id/Button3"
        app:layout_constraintRight_toLeftOf="@+id/minusButton"
        app:layout_constraintBottom_toTopOf="@+id/Button5" />

    <Button
        android:id="@+id/delButton"
        android:layout_width="88dp"
        android:layout_height="86dp"
        android:background="@color/colorPrimary"
        android:text="Del"
        app:layout_constraintTop_toBottomOf="@+id/minusButton"
        app:layout_constraintRight_toLeftOf="@+id/multiButton"
        app:layout_constraintBottom_toTopOf="@+id/Button6" />

    <RelativeLayout
        android:layout_width="109dp"
        android:layout_height="603dp"
        tools:layout_editor_absoluteY="0dp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent">

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
